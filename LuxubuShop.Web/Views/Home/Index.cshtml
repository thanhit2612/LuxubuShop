@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var listNewProduct = (List<LuxubuShop.Core.EF.Product>)ViewBag.NewProducts;
	var listFeatureProduct = (List<LuxubuShop.Core.EF.Product>)ViewBag.featureProducts;
	var listSlide = (List<LuxubuShop.Core.EF.Slide>)ViewBag.Slides;
}

@section header_slider {
	<div class="header_slide">
		@{ Html.RenderAction("ProductCategory", "Product");}
		<div class="header_bottom_right">
			<div class="slider">
				<div id="slider">
					<div class="owl-carousel owl-theme" id="banner-slider">
						@foreach (var item in listSlide)
						{
							<div class="item">
								<a href="@(item.Link)">
									<img src="@(item.Image)" alt="" class="slider-img">
								</a>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
		<div class="clear"></div>
	</div>
}
<div class="content">
	<div class="content_top">
		<div class="heading">
			<h3>Sản phẩm mới</h3>
		</div>
		<div class="see">
			<p><a href="/san-pham">Xem tất cả</a></p>
		</div>
		<div class="clear"></div>
	</div>
	<div class="section group">
		@foreach (var item in listNewProduct)
		{
			var link = "/danh-gia/" + item.MetaTitle + "-" + item.ID;
		<div class="grid_1_of_4 images_1_of_4">
			<a href="@link"><img src="@item.Image" alt="@item.Name" /></a>
			<h2>@item.Name</h2>
			<h3>
				<i class="fa fa-eye" aria-hidden="true"></i>
				@item.ClickCount
			</h3>
			<h3>
				@for (int i = 0; i < item.Rating; i++)
				{
				<i class="fas fa-star"></i>
				}
				@for (int i = (item.Rating); i < 5; i++)
				{
			<i class="far fa-star"></i>
				}
			</h3>

			<div class="price-details">
				<div class="price-number">
					<p style="text-decoration:line-through; opacity: .8"><span class="rupees">@(item.PromotionPrice.HasValue ? item.PromotionPrice.Value.ToString("N0"): "Liên hệ") VNĐ</span></p>
					<p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0"): "Liên hệ") VNĐ</span></p>
				</div>
				<div class="add-cart">
					<h4><a href="@item.ProductLink" target="_blank">Xem sản phẩm</a></h4>
					<h4>@Html.ActionLink("Xem đánh giá", "ClickCount", "Product", new { id = item.ID }, null)</h4>
				</div>
				<div class="clear"></div>
			</div>
		</div>
		}
	</div>
	<div class="content_bottom">
		<div class="heading">
			<h3>Sản phẩm nổi bật</h3>
		</div>
		<div class="see">
			<p><a href="/san-pham">Xem tất cả</a></p>
		</div>
		<div class="clear"></div>
	</div>
	<div class="section group">
		@foreach (var item in listFeatureProduct)
		{
			var link = "/danh-gia/" + item.MetaTitle + "-" + item.ID;
			<div class="grid_1_of_4 images_1_of_4">
				<a href="@link"><img src="@item.Image" alt="@item.Name" /></a>
				<h2>@item.Name</h2>
				<h3>
					<i class="fa fa-eye" aria-hidden="true"></i>
					@item.ClickCount
				</h3>
				<div class="price-details">
					<div class="price-number">
						<p style="text-decoration:line-through; opacity: .8"><span class="rupees">@(item.PromotionPrice.HasValue ? item.PromotionPrice.Value.ToString("N0"): "Liên hệ") VNĐ</span></p>
						<p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0"): "Liên hệ") VNĐ</span></p>
					</div>
					<div class="add-cart">
						<h4><a href="@item.ProductLink">Xem sản phẩm</a></h4>
						<h4 style="margin-top: 5px;">
							<a href="@link">
								Xem đánh giá
							</a>
						</h4>
					</div>
					<div class="clear"></div>
				</div>
			</div>
		}
	</div>
</div>



