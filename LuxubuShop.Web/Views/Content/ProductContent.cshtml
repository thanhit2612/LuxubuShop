@using PagedList;
@using PagedList.Mvc;
@model PagedList<LuxubuShop.Core.EF.Content>
@{
	var product = (LuxubuShop.Core.EF.Product)ViewBag.Product;
	ViewBag.Title = product.Name;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
	<div class="content_top">
		<div class="heading">
			<h3>@product.Name</h3>
		</div>
		<div class="see">
			<p><a href="#">Xem tất cả bài đánh giá</a></p>
		</div>
		<div class="clear"></div>
	</div>
	@foreach (var item in Model)
	{
		<div class="image group">
			<div class="grid images_3_of_1">
				<img src="@item.Image" alt="@item.Name" style="border-radius: 5px" />
			</div>
			<div class="grid news_desc">
				<h3>@item.Name</h3>
				<p>@item.Descriptions ...</p>
				<p>
					<a href="#">View More</a>
				</p>
				<p>
					<i class="fas fa-tags"></i>Tags:
					<a href="#">@item.Tags</a>
				</p>
				<p>
					<i class="fas fa-user-edit"></i>Tác giả:
					@item.CreatedBy | @string.Format("{0:dd-MM-yyyy}", item.CreatedDate)
				</p>
			</div>
		</div>
	}
	<div class="content-pagenation">
		<div class="pageList">
			Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
			@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
		</div>
	</div>
</div>

