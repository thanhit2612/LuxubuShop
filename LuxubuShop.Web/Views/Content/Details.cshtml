@model LuxubuShop.Core.EF.Content

@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var tags = (List<LuxubuShop.Core.EF.Tag>)ViewBag.Tags;
}

<div class="container">
	<h3 class="h3">@Model.Name</h3>
	<p>@Model.Descriptions</p>
	<p>@Html.Raw(@Model.Detail)</p>

	<ul>

		<li>
			@foreach (var tag in tags)
			{
				<a href="/tag/@tag.ID">@tag.Name, </a>
			}

		</li>
	</ul>
</div>
