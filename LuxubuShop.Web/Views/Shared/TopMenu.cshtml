@model List<LuxubuShop.Core.EF.Menu>

@{ 
	var session = (LuxubuShop.Web.Common.UserLogin) Session[LuxubuShop.Web.Common.CommonConstants.CUSTOMER_SESSION];
}

<div class="account_desc">
	<ul>
		@foreach (var item in Model)
		{
			if (session == null)
			{
		<li style="background: #0F91F3; padding: 8px 10px; border-radius: 4px">
			<a href="@item.Link" target="@item.Target" style="color: #fff;">@item.Text</a>
		</li>
			}
			else
			{
				<li>
					Hello: @session.UserName
				</li>
				<li>
					@Html.ActionLink("Logout", "Logout", "Login")
				</li>
			}
		}
		<div class="clear"></div>
	</ul>

</div>
