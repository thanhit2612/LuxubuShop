@using PagedList;
@using PagedList.Mvc;
@model PagedList<LuxubuShop.Core.EF.Product>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
	<div class="section group">
		@foreach (var item in Model)
		{
			var link = "/danh-gia/" + item.MetaTitle + "-" + item.ID;
			<div class="grid_1_of_4 images_1_of_4">
				<a href="@link"><img src="@item.Image" alt="" /></a>
				<h2>@item.Name</h2>
				<div class="price-details">
					<div class="price-number">
						<p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0"): "Liên hệ") VNĐ</span></p>
					</div>
					<div class="add-cart">
						<h4><a href="@item.ProductLink">Xem sản phẩm</a></h4>
						<h4><a href="@link">Xem đánh giá</a></h4>
					</div>
					<div class="clear"></div>
				</div>
			</div>
		}
	</div>
	<div class="pageList">
		Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
		@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
	</div>
</div>
