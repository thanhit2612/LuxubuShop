@using PagedList;
@using PagedList.Mvc;
@model PagedList<LuxubuShop.Core.EF.Product>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Kết quả tìm kiếm";
	var keyword = ViewBag.KeyWord;
}


<div class="content">
	<div class="content_top">
		<div class="heading">
			<h3>Kết quả tìm kiếm @keyword</h3>
		</div>
		<div class="see">
			<p><a href="#">Xem tất cả</a></p>
		</div>
		<div class="clear"></div>
	</div>
	<div class="section group">
		@foreach (var item in Model)
		{
			var link = "/tim-kiem?q=" + keyword;
			<div class="grid_1_of_4 images_1_of_4">
				<a href="@link"><img src="@item.Image" alt="" /></a>
				<h2>@item.Name</h2>
				<div class="price-details">
					<div class="price-number">
						<p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0"): "Liên hệ") VNĐ</span></p>
					</div>
					<div class="add-cart">
						<h4><a href="@item.ProductLink">Xem sản phẩm</a></h4>
						<h4><a href="@link">Xem đánh giá</a></h4>
					</div>
					<div class="clear"></div>
				</div>
			</div>
		}
	</div>
	<div class="pageList">
		Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
		@Html.PagedListPager(Model, page => Url.Action("Category", new { page }))
	</div>
</div>
