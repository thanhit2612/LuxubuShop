@model LuxubuShop.Core.EF.User

@{
	ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section pageTitle{ Chỉnh sửa thành viên }

<div class="btn btn-primary btn-sm">
	<i class="fas fa-sign-out-alt fa-icon"></i>
	@Html.ActionLink("Quay lại", "Index", "User", new { @class = "text-white" })
</div>
<div class="pt-4">
	<div class="col-lg-12">
		@using (Html.BeginForm("Create", "User", FormMethod.Post, new { @id = "register-form" }))
		{
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-12" })
					<div class="col-md-12">
						@Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-sm", @rules = "required" })
						<span class="form-message small text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-12" })
					<div class="col-md-12">
						@Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-sm", @rules = "required|min:" })
						<span class="form-message small text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-12" })
					<div class="col-md-12">
						@Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-sm", @type = "email", rules = "required|email" })
						<span class="form-message small text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12" })
					<div class="col-md-12">
						@Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-sm", @rules = "required" })
						<span class="form-message small text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-12">
						<button type="submit" class="btn btn-success btn-user btn-block btn-sm">Tạo mới</button>
					</div>
				</div>
			</div>
		}
	</div>
</div>

