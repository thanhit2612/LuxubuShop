@model LuxubuShop.Core.EF.About

@{
	ViewBag.Title = "Details";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section pageTitle{ Giới thiệu }

<div class="btn btn-primary btn-sm">
	<i class="fas fa-sign-out-alt fa-icon"></i>
	@Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ID }, new { @class = "text-white" })
</div>


<div>
	<h3>@(Model.Name)</h3>
	<p style="text-align: justify">@(Model.Description)</p>
	<p style="text-align: justify">@Html.Raw(Model.Detail)</p>
</div>
