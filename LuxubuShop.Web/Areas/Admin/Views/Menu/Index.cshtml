@using PagedList.Mvc;
@model PagedList.IPagedList<LuxubuShop.Core.EF.Menu>
@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section pageTitle{ Menu }

<div class="btn btn-primary btn-sm">
	<i class="fas fa-plus-circle"></i>
	@Html.ActionLink("Thêm mới", "Create", "Menu", new { @class = "text-white" })
</div>

<link href="~/Assets/Admin/css/style.css" rel="stylesheet" />
<!-- Begin Page Content -->
<div class="container-fluid mt-4">

	<!-- Danh sách -->
	<div class="card shadow mb-4">
		<div class="card-header py-3"></div>
		<div class="card-body">
			@using (Html.BeginForm("Index", "Menu", FormMethod.Get))
			{
				<div class="row justify-content-end">
					<div class="col-lg-3 col-md-3">
						<label class="d-flex align-items-center">
							<input class="form-control form-control-sm" placeholder="Search" name="searchString" value="@ViewBag.SearchString">
							<button type="submit" class="btn btn-outline-success btn-sm ml-1">
								<i class="fas fa-search"></i>
							</button>
						</label>
					</div>
				</div>
			}
			<div class="table-responsive mt-3">
				<table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr class="text-center">
							<th>Tên Menu</th>
							<th>Loại Menu</th>
							<th>Trạng Thái</th>
							<th>Tùy Chỉnh</th>
						</tr>
					</thead>
					<tfoot>
						<tr class="text-center">
						<tr class="text-center">
							<th>Tên Menu</th>
							<th>Loại Menu</th>
							<th>Trạng Thái</th>
							<th>Tùy Chỉnh</th>
						</tr>
					</tfoot>
					<tbody>
						@foreach (var item in Model)
						{
							<tr id="row_@item.ID" class="text-center">
								<td>@item.Text</td>
								<td>@item.TypeID</td>
								<td>@item.Status</td>
								<td class="d-flex justify-content-md-around flex-md-wrap">
									<button type="button" class="btn btn-primary btn-sm">
										@Html.ActionLink("Sửa", "Edit", new { @id = item.ID }, new { @class = "text-white" })
									</button>
									<button type="button" class="btn btn-danger btn-sm">
										@Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
										   {
											   Confirm = "Bạn chắn chắn muốn xóa tài khoản này ?",
											   OnComplete = "$('#row_" + @item.ID + "').remove()",
											   HttpMethod = "Delete"
										   }, new { @class = "text-white" })
									</button>
								</td>
							</tr>
						}
					</tbody>
				</table>
				<div class="pageList">
					Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
					@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
				</div>
			</div>
		</div>
	</div>

</div>
