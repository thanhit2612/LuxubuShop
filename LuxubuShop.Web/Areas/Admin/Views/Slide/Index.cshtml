@model List<LuxubuShop.Core.EF.Slide>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section pageTitle {Slide}

<div class="btn btn-primary btn-sm">
	<i class="fas fa-plus-circle"></i>
	@Html.ActionLink("Thêm mới", "Create", "User", new { @class = "text-white" })
</div>

<!-- Begin Page Content -->
<div class="container-fluid mt-4">
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3"></div>
		<div class="card-body">
			@using (Html.BeginForm("Index", "User", FormMethod.Get))
			{
				<div class="row justify-content-end">
					<div class="col-lg-3 col-md-3">
						<label class="d-flex align-items-center">
							<input class="form-control form-control-sm" placeholder="Search" name="searchString" value="@ViewBag.SearchString">
							<button type="submit" class="btn btn-outline-success btn-sm ml-1">
								<i class="fas fa-search"></i>
							</button>
						</label>
					</div>
				</div>
			}
			<div class="table-responsive mt-3">
				<table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr class="text-center">
							<th>Hình Ảnh</th>
							<th>Người Tạo</th>
							<th>Trạng Thái</th>
							<th>Ngày tạo</th>
							<th>Tùy chỉnh</th>
						</tr>
					</thead>
					<tfoot>
						<tr class="text-center">
							<th>Hình Ảnh</th>
							<th>Người Tạo</th>
							<th>Trạng Thái</th>
							<th>Ngày tạo</th>
							<th>Tùy chỉnh</th>
						</tr>
					</tfoot>
					<tbody>
						@foreach (var item in Model)
						{
							<tr id="row_@item.ID" class="text-center">
								<td style="max-width: 200px">
									<img src="@item.Image" class="w-100 img-thumbnail"/>
								</td>
								<td>@item.CreatedBy</td>
								<td>@item.Status</td>
								<td>@string.Format("{0:dd/MM/yyyy}", @item.CreatedDate)</td>
								<td>
									<button type="button" class="btn btn-primary btn-sm">
										@Html.ActionLink("Sửa", "Edit", new { @id = item.ID }, new { @class = "text-white" })
									</button>
									<button type="button" class="btn btn-danger btn-sm">
										@Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
										   {
											   Confirm = "Bạn chắn chắn muốn xóa tài khoản này ?",
											   OnComplete = "$('#row_" + @item.ID + "').remove()",
											   HttpMethod = "Delete"
										   }, new { @class = "text-white" })
									</button>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>
